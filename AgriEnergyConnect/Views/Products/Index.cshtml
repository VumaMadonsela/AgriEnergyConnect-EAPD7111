@model IEnumerable<AgriEnergyConnect.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">
            <i class="bi bi-box-seam"></i> Products
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add Product
        </a>
    </div>

    <!-- Filter/Search Section -->
    <form method="get" asp-action="Index" class="card mb-4 shadow-sm border-0">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="category" class="form-control" placeholder="Search Category..." />
                </div>
                <div class="col-md-3">
                    <input type="date" name="startDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <input type="date" name="endDate" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-funnel"></i> Filter
                    </button>
                </div>
            </div>
        </div>
    </form>

    <!-- Product Table -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Production Date</th>
                            <th>Farmer</th>
                            <th class="text-center" style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var p in Model)
                            {
                                <tr>
                                    <td>@p.Name</td>
                                    <td>@p.Category</td>
                                    <td>@p.ProductionDate.ToShortDateString()</td>
                                    <td>@p.Farmer?.Name</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-info me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="bi bi-emoji-frown"></i> No products found.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
