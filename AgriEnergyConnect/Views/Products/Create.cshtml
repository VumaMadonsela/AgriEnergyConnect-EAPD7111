@model AgriEnergyConnect.Models.Product
@{
    ViewData["Title"] = "Add Product";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">
                <i class="bi bi-plus-circle"></i> Add New Product
            </h5>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Product Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter product name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Category -->
                <div class="mb-3">
                    <label asp-for="Category" class="form-label fw-semibold"></label>
                    <input asp-for="Category" class="form-control" placeholder="e.g. Vegetables, Livestock..." />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>

                <!-- Production Date -->
                <div class="mb-3">
                    <label asp-for="ProductionDate" class="form-label fw-semibold"></label>
                    <input asp-for="ProductionDate" type="date" class="form-control" />
                    <span asp-validation-for="ProductionDate" class="text-danger"></span>
                </div>

                <!-- Farmer Select with Agri Option -->
                <div class="mb-3">
                    <label asp-for="FarmerId" class="form-label fw-semibold">Select Farmer</label>
                    <select asp-for="FarmerId" class="form-select">
                        <option value="">-- Select Farmer --</option>

                        <!-- Special Agri option -->
                        <option value="0">Agri Supply</option>

                        @foreach (var farmer in ViewBag.Farmers)
                        {
                            <option value="@farmer.Id">@farmer.Name</option>
                        }
                    </select>
                    <span asp-validation-for="FarmerId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
